---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
import type { CollectionEntry } from "astro:content";
import { useTranslations } from "@/i18n";

const t = useTranslations();

type Props = {
  post: CollectionEntry<"blog">;
  class?: string;
};

const {
  post: {data: { cover, title, date }},
} = Astro.props;
---

<div class="relative h-[200px] overflow-hidden bg-primary-50 dark:bg-opacity-10 rounded-lg" class:list={Astro.props.class}>
  {
    cover && (
      <Image
        src={cover}
        alt={title}
        widths={[300, 600, 1000]}
        sizes="(max-width: 767px) 100vw, 300px"
        class="object-cover absolute inset-0 w-full h-full z-0"
      />
    )
  }
  <dl>
    <dt class="sr-only">{t('components.listPostCover.publishedAt')}</dt>
    <dd
      class="text-xs py-0 px-2 font-medium leading-6 text-primary-50 bg-primary-700 rounded-lg m-1 absolute bottom-0 z-10"
    >
      <FormattedDate date={date} />
    </dd>
  </dl>
</div>
