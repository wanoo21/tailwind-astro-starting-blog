---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  src: string;
  alt: string;
  width: number;
  height: number;
  metadata: ImageMetadata;
};
---

<figure>
  <Image {...Astro.props} class="rounded-lg" />
  <figcaption>
    <slot />
  </figcaption>
</figure>
